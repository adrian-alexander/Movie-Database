<!DOCTYPE html>
<html lang="en">
<%- include("partials/header", {title: movie.Title}) %>
<br>
<br>
<img src="<%= movie.Poster%>">


<body class="nordtheme">
    <style>
        body {
            text-align: left;
            margin: auto;
            padding: 20px;
            font-size: 30px;
        }
    </style>
    <br>
    <button id="addToWatchlistButton" class="login-button"><%= watchlistButtonText %></button>
    <br>
    <button id="addToFavouritesButton" class="login-button"><%= favouritesButtonText %></button>
    <br>

    <% if (contributor == 1) { %>
        <button  class="login-button" onclick="window.location.href='/private/movie/<%=movie.imdbID%>/edit'">Edit movie </a></button>
    <% } %>
    
    <table>
        <tr>
            <td> Name: <%= movie.Title%> (<%= movie.Year%>)</td>
        </tr>
        <tr>
            <td id="idDataCell" style="display: none"><%= movie.imdbID%></td>
        </tr>
        <tr>
            <td> Average Rating: <%= average %>%</td>
        </tr>
        <tr>
            <td> Runtime: <%= movie.Runtime %></td>
        </tr>
        <tr>
            <td> Plot: <%= movie.Plot %></td>
        </tr>
        <tr>
            <td>Genre(s): </td>
        </tr>
        <tr>
            <% for (let genre of movie.Genre) { %>
        <tr>
            <td> <a href="<%= searchTermLink + genre + typeLink + "Genre"%>"><%= genre %></a> </td>
        </tr>
        <% } %>
        </tr>
        <tr>
            <td>Director(s): </td>
        </tr>
        <tr>
            <% for (let director of movie.Director) { %>
        <tr>
            <td> <a href="<%= "/private/person/" + director%>"><%= director %></a> </td>
        </tr>
        <% } %>
        </tr>
        <tr>
            <td>Writer(s): </td>
        </tr>
        <tr>
            <% for (let writer of movie.Writer) { %>
        <tr>
            <td> <a href="<%= "/private/person/" + writer%>"><%= writer %></a> </td>
        </tr>
        <% } %>
        </tr>
        <tr>
            <td>Actor(s): </td>
        </tr>
        <tr>
            <% for (let actor of movie.Actors) { %>
        <tr>
            <td> <a href="<%= "/private/person/" + actor%>"><%= actor %></a> </td>
        </tr>
        <% } %>
        </tr>
        <tr>
            <td>Similar Movies: </td>
        </tr>
        <tr>
            <!-- <% for (let actor of movie.Actors) { %> -->
        <tr>
            <!-- <td> <a href="<%= "/private/person/" + actor%>"><%= actor %></a> </td> -->
        </tr>
        <!-- <% } %> -->
        </tr>
        <tr>
            <td> <a href="<%= "/private/movie/" + movie.imdbID + "/reviews"%>">Reviews</a> </td>
        </tr>
        
    </table>
</body>
<script src="/logic.js"></script>